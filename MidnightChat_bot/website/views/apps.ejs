                                            <input type="hidden" name="adID" value="A"/>
                                            <input id="submitButton" type="submit" class="btn btn-primary"  value="Submit"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>   
                </div>
            </div>`;
            document.getElementById(id + 'applicationUpdate').reset();

                if(gender == "male") {
                    $("#male").prop('checked', true);
                } else  {
                    $("#female").prop('checked', true);
                }
            /* Disable Scroll*/
            scrollPosition = window.pageYOffset;

            var $body = $(document.body);
            var oldWidth = $body.innerWidth();
            $body.css('overflow', 'hidden');
            $body.css('top', `-${scrollPosition}px`);
            $body.css('position', 'fixed');
            $body.width(oldWidth);
        }
    </script>
    <script>
        function closeUpdateForm() {
            document.getElementById("updateThe").innerHTML = "";

            /* Enable Scroll*/

            var $body = $(document.body);
            $body.css('overflow', '');
            $body.css('position', '');
            $body.css('top', '');
            $body.width('');
            window.scrollTo(0, scrollPosition);

        } 
    </script>
    <script>
        function sendDatatoUpdate(id) {

            $("#" + id + "applicationUpdate").submit(function(e) {
                e.preventDefault();

                const data = $("#" + id + "applicationUpdate").serializeArray();

                const obj = {};

                function toJson(arr) {

                    arr.map((element) => {
                        obj[element.name] = element.value;
                    })
                }
                toJson(data);

                const domain = "localhost";
                const afterAds = id;

                fetch(`http://${domain}:3000/apps/${afterAds}`, {
                    // mode: "no-cors",
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    method: 'PUT',
                    body: JSON.stringify(obj)

                });
                setInterval(function(){document.location.reload()}, 500);
            });
        };
    </script>
    <script>
        function deleteFunction(id) 
        {
            swal({
            title: "Are you sure you want to delete this application?",
            text: "Once deleted, you will not be able to recover this application!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
            })
            .then((willDelete) => {
            if (willDelete) {
                swal("", {
                icon: "success",
                });
                const domain = "localhost";
                    var afterAds = id;

                    fetch(`http://${domain}:3000/apps/${afterAds}`, {
                        // mode: "no-cors",
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        method: 'DELETE'
                    });
                    setInterval(function(){document.location.reload(true)}, 500);
            } else {
                return false;
            }
            });
        };
    </script>

