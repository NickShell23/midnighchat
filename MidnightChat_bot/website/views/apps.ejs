    <script>

       function sendDataToAdd() {

                $('#applicationAdd').submit(function (e) {

                e.preventDefault();

                const data = $('#applicationAdd').serializeArray();

                const obj = {};


                    function toJson(arr) {

                        arr.map((element) => {
                            if (element.name === "roles") {
                                        obj[element.name] = [element.value];
                                } else {
                                        obj[element.name] = element.value;
                                }

                            })
                    }
                    toJson(data);

                    const domain = "localhost";

                    fetch(`http://${domain}:3000/apps/new`, {
                        // mode: "no-cors ",
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        method: 'POST',
                        body: JSON.stringify(obj)

                    });
                    setInterval(function(){document.location.reload(true)}, 500);
                });
       };
    </script> 
    <script>
        function updateFunction(id, firstName, lastName, description, gender, email, phone) {
            document.getElementById("updateThe").innerHTML =
            `<div class="bg-modal scroll="no">
                <div class="container opacityOff PopupPanel">
                    <div class="contact-wrap w-100 p-md-5 p-4">
                        <div class="panel panel-primary">
                            <div class="mb-4 row col-md-12">
                            <h1>Registration Form</h1>
                            <button onclick="closeUpdateForm()" class="close" type="button"></button>
                            </div>
                            <div class="panel-body">
                                <form id="`+ id +`applicationUpdate">
                                    <div class="row register-form">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input id="firstName" name="firstName" type="text" class="form-control" placeholder="First Name *" value="`+ firstName +`" required />
